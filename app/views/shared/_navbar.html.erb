<!-- app/views/layouts/_navbar.html.erb -->
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
  <div class="container-fluid">
    <%= link_to "Home Boats", boats_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <!-- Ajoutez d'autres liens de navigation au besoin -->
      </ul>

      <% if params[:query].present? %>
        <span class="navbar-text">
          You searched for: <%= params[:query] %>
        </span>
      <% else %>
        <%= form_tag(search_path, method: :get, class: 'd-flex') do %>
          <input class="form-control me-2" name="query" type="search" placeholder="Search" aria-label="Search" value="<%= params[:query] %>">
          <button class="btn btn-outline-success" type="submit">Search</button>
        <% end %>
      <% end %>

      <%= link_to "Add new Boats", new_boat_path, class: "btn btn-outline-primary my-2 my-sm-0 ms-2" %>
    </div>
  </div>
</nav>
