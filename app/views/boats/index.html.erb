<%= render "shared/navbar" %>
  <div class="container mt-3">
    <div class="row">
      <div class="col-12"><br>
        <h5>All Our Best Boats</h5>
      </div>
    </div>


  <div class="row">
     <% @boats.each do |boat| %>
      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-content d-flex flex-column">
            <div class="flat-card-title">
              <%= cl_image_tag(boat.photo.key, height: 300, width: 400, crop: :fill) if boat.photo.attached? %>
              <h1>
                <%= boat.category %>
              </h1>
              <h4>
                <%= boat.name %>
              </h4>
            </div>
            <p>
              <%= boat.address %>
            </p>
            <div class="flex">
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span>
                  <%= boat.price %>
                </span>
              </div>
            </div>
            <div class="flat-card-actions mt-auto">
              <%= link_to "More info", boat_path(boat) %>
              <%= link_to "Edit", edit_boat_path(boat), class: "ms-3 text-warning" %>
              <%= link_to "Remove", boat_path(boat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: "ms-3 text-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


</div>

<%= link_to "Go Back To Home" , boats_path %>
